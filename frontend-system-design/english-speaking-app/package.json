        "@trpc/server": "^11.8.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.3.0",
        "@types/react-dom": "^18.3.0",
        "@types/react-relay": "^18.2.1",
        "@types/relay-runtime": "^20.1.0",
        "jest": "^29.7.0",
