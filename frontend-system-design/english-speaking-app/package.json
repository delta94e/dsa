{
    "name": "english-speaking-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev -p 3001",
        "build": "next build",
        "start": "next start -p 3001",
        "lint": "next lint",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:local": "playwright test --ui --config=playwright.local.config.ts",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "relay": "relay-compiler",
        "relay:watch": "relay-compiler --watch",
        "fetch-schema": "curl -s http://localhost:3002/graphql -H 'Content-Type: application/json' -d '{\"query\":\"{__schema{types{name}}}\"}' > /dev/null && echo 'Schema available'"
    },
    "dependencies": {
        "@mantine/core": "^7.13.0",
